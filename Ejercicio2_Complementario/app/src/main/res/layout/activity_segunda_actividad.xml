<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaActividad"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="536dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombre2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Calculo de salario y descuentos"
            android:textAlignment="center"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/txtSalario"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="salario"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txtISSS"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="ISSS"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txtAFP"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="AFP"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txtRenta"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Renta"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txtNeto"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:text="SalarioNeto"
            android:textAlignment="center"
            android:textSize="19sp" />

    </LinearLayout>

</LinearLayout>